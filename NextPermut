void nextPermutation(int arr[],int n)
{
int idx=-1;
for(int i=n-1;i>0;i--)
{
if(arr[i]>arr[i-1])
{
idx=i;
break;
}
}
if(idx==-1)
{
reverse(arr.begin(),arr.end());
}
else
{
int prev;
for(int i=idx+1;i<n;i++)
{
if(arr[i]>arr[idx-1]and arr[i]<=arr[prev])
{
prev=i;
}
}swap(arr[idex-1],arr[prev]);
reverse(arr.begin(),arr.end());
}

}
